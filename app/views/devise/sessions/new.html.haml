%h2
  Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %div
    %table
      %tr
        %td
          = f.label 'Email*: '
        %td
          = f.email_field :email
      %tr
        %td
          = f.label 'Password*: '
        %td
          = f.password_field :password

  - if devise_mapping.rememberable?
    %div
      %label
        = f.check_box :remember_me
        = 'remember me'
      %br
  %div
    = f.submit "Sign in"
    = link_to (image_tag("facebook_32.png", :size => "32x32",  :alt => "Facebook")), "/auth/facebook"

= render "devise/shared/links"
