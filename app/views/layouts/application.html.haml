!!!DOCTYPE html
%html
%head
  %title
    Tgallery
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = yield :include_gon
  = yield :include_js
  = csrf_meta_tags
%body
  = nav_bar fixed: :top, brand: "T-Gallery", brand_link: root_path, class: 'row' do
    = menu_group pull: 'left' do
      = drop_down 'Categories' do
        - @categories_menu.each do |cat|
          = menu_item cat.name, category_path(cat.name)
      = menu_item 'All images', pictures_path
      = menu_item 'All comments', user_comments_path
      = menu_item 'User events', events_path if user_signed_in? && current_user.admin?
    = menu_group pull: 'right' do
      - unless user_signed_in?
        = menu_item 'Sign in', new_user_session_path
        = menu_item 'Sign up', new_user_registration_path
      - else
        - if current_user.admin?
          = menu_item 'Admin Panel', admin_root_path
        - else
          = menu_item 'Profile', edit_user_registration_path(current_user)
        = menu_item 'Sign out', destroy_user_session_path, method: :delete
  = bootstrap_flash
  .row-fluid
    .span10.offset1#page-container
      = yield
  -#%footer.footer
  = nav_bar fixed: :bottom, class: 'row' do
    = menu_text "ABCompany", align: 'center', class: 'footer-text'
    = menu_text "Â© 2013", align: 'center', class: 'footer-text'